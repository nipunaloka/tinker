// C++ code
// Serial Communication LiquidCrystal_I2C and Ultrasonic
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup()
{
  Serial.begin(9600);
  lcd.init();
   // Turn on the LCD backlight
  lcd.backlight();
}

void loop()
{
  if(Serial.available() > 0){
  	int distance = Serial.parseInt();
    Serial.print("Distance: ");
    Serial.print(distance);
    Serial.println(" cm");
    
    lcd.clear();
    lcd.setCursor(0,0);
    lcd.print("Distance");
    lcd.setCursor(0,1);
    lcd.print(distance);
    
    
  }
  delay(250);
}

//

